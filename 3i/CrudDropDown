using System;
using System.Collections.Generic;
using System.Linq;
using System.Web;
using System.Web.UI;
using System.Web.UI.WebControls;
using System.Text;
using System.Data;
using System.Data.OracleClient;


namespace CountryDropDownList
{
    public partial class _Default : System.Web.UI.Page
    {
        String sqlCmd = "";
        string connetionString;
        OracleConnection cnn;
        OracleCommand command;
        OracleDataReader dr = null;

        protected void Page_Load(object sender, EventArgs e)
        {
            connetionString = @"Data Source=MISUAT;User ID=staging_ed;Password=password;";
            cnn = new OracleConnection(connetionString);
        }

        protected void ddlCountry_SelectedIndexChanged(object sender, EventArgs e)
        {
            ddlState.Items.Clear();
            sqlCmd = "select * from TBL_STATES where countryid=" + ddlCountry.SelectedIndex;

            command = new OracleCommand(sqlCmd, cnn);

            cnn.Open();

            dr = command.ExecuteReader();

            ddlState.DataSource = dr;
            ddlState.DataTextField = "state";
            ddlState.DataValueField = "id";
            ddlState.DataBind();
            ddlState.Items.Insert(0, new ListItem("-Select-", "0"));


        }

        protected void ddlState_SelectedIndexChanged(object sender, EventArgs e)
        {
            ddlCity.Items.Clear();

            sqlCmd = "select * from tbl_city where stateid=" + ddlState.SelectedValue;
            command = new OracleCommand(sqlCmd, cnn);

            cnn.Open();

            dr = command.ExecuteReader();
            ddlCity.DataSource = dr;
            ddlCity.DataTextField = "city";
            ddlCity.DataBind();
            ddlCity.Items.Insert(0, new ListItem("-Select-", "0"));

        }

        protected void onSubmit(object sender, EventArgs e)
        {
            string connetionString;
            OracleConnection cnn;

            connetionString = @"Data Source=MISUAT;User ID=staging_ed;Password=password;";

            cnn = new OracleConnection(connetionString);

            cnn.Open();

            OracleCommand command;
            OracleDataAdapter adapter = new OracleDataAdapter();
            String sql = "";

            sql = "Insert into tbl_userInfo(NAME,AGE,COUNTRY,STATE,CITY) values ( '" + TxtBox1.Text + "',' " + TextBox2.Text + " ' , ' " + ddlCountry.Text + " ' ,' " + ddlState.Text + "','" + ddlCity.Text + " ')";

            command = new OracleCommand(sql, cnn);
            adapter.InsertCommand = new OracleCommand(sql, cnn);
            adapter.InsertCommand.ExecuteNonQuery();

            command.Dispose();
            cnn.Close();


      
                //Populating a DataTable from database.
                DataTable dt = this.GetData();

                //Building an HTML string.
                StringBuilder html = new StringBuilder();

                //Table start.
                html.Append("<table border = '1'>");

                //Building the Header row.
                html.Append("<tr>");
                foreach (DataColumn column in dt.Columns)
                {
                    html.Append("<th>");
                    html.Append(column.ColumnName);
                    html.Append("</th>");
                }
                html.Append("</tr>");

                //Building the Data rows.
                foreach (DataRow row in dt.Rows)
                {
                    html.Append("<tr>");
                    foreach (DataColumn column in dt.Columns)
                    {
                        html.Append("<td>");
                        html.Append(row[column.ColumnName]);
                        html.Append("</td>");
                    }
                    html.Append("</tr>");
                }

                //Table end.
                html.Append("</table>");

                //Append the HTML string to Placeholder.
                PlaceHolder1.Controls.Add(new Literal { Text = html.ToString() });
            

        }

        private DataTable GetData()
        {
            string connetionString;
            OracleConnection cnn;

            connetionString = @"Data Source=MISUAT;User ID=staging_ed;Password=password;";

            using (cnn = new OracleConnection(connetionString))
            {
                cnn.Open();

                using (OracleCommand cmd = new OracleCommand("SELECT NAME,AGE,COUNTRY,STATE,CITY FROM tbl_userInfo"))
                {
                    using (OracleDataAdapter sda = new OracleDataAdapter())
                    {
                        cmd.Connection = cnn;
                        sda.SelectCommand = cmd;
                        using (DataTable dt = new DataTable())
                        {
                            sda.Fill(dt);
                            return dt;
                        }
                    }
                }
            }

        }

    }
}
